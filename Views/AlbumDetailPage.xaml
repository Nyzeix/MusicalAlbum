<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicalAlbum.Views.AlbumDetailPage"
             Title="AlbumDetailPage">
    <VerticalStackLayout>
        <Border 
            Stroke="GhostWhite" 
            StrokeThickness="1"
            StrokeShape="RoundRectangle 8"
            Padding="10">
            <HorizontalStackLayout Spacing="10">
                <Image Source="{Binding AlbumPicture}"
                         WidthRequest="60"
                         HeightRequest="60"
                         Aspect="AspectFill"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Margin="4"/>
                <VerticalStackLayout Margin="10">
                    <Label 
                                     Text="{Binding AlbumName}"
                                     FontSize="32"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Border>


        <CollectionView x:Name="albumsCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border 
                        Stroke="GhostWhite" 
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        Padding="10">
                        <HorizontalStackLayout Spacing="10">
                            <Image Source="{Binding AlbumPicture}"
                               WidthRequest="60"
                               HeightRequest="60"
                               Aspect="AspectFill"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               Margin="4"/>
                            <VerticalStackLayout Margin="10">
                                <Label 
                                    Text="{Binding AlbumName}"
                                    FontSize="32"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>